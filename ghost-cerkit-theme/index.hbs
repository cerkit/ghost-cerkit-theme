<!-- index -->
{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="row site-logo">
	<div class="col-md-12">
		{{! The big featured header }}
		<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
			<div class="vertical">
				<div class="main-header-content">
					<h1 class="page-title">{{@blog.title}}</h1>
					<h2 class="page-description text-justify">{{@blog.description}}</h2>
				</div>
			</div>
			<a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
		</header>
	</div>
</div>
{{! The main content area on the homepage }}
<main id="content" class="content" role="main">	
	<div class="row">
		<div class="col-md-offset-4 col-md-8">
			{{! Previous/next page links - only displayed on page 2+ }}
			<div class="extra-pagination text-center">
				{{pagination}}
			</div>
		</div>
	</div>
	
	<div class="row">
		<div id="sidebar-container" class="col-md-4">
            {{#posts.[0].author}}
			    {{> "sidebar"}}
            {{/posts.[0].author}}
		</div>
		<div id="content-container" class="col-md-8">
			{{! The tag below includes the post loop - partials/loop.hbs }}
			{{> "loop"}}
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-4 col-md-8">
			<div class="text-center">
				{{! Previous/next page links - displayed on every page }}
				{{pagination}}
			</div>
		</div>
	</div>
</main>
<!-- /index -->